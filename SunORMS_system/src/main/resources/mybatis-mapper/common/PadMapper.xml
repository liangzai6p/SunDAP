<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sunyard.ars.common.dao.PadDao">
  <update id="updateArthiveData" parameterType="java.util.HashMap" >
   update PAD SET ARCHIVE_STATE = '1'
   	<where>
   		<if test="siteNo != ''">
    		and SHEAD_TRSORGAN = #{siteNo,jdbcType=VARCHAR}
    	</if>
    	<if test="occurDate != ''">
    		and SHEAD_TRSDT = #{occurDate,jdbcType=DECIMAL}
    	</if>
   	</where>
 </update>
</mapper>

